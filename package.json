{
  "name": "@novon/open-tokenlist",
  "version": "1.0.0",
  "description": "A package that contains addresses of mulitple tokens across multiple blockchains in one place.",
  "main": "dist/main/index.js",
  "typings": "dist/main/index.d.ts",
  "module": "dist/module/index.js",
  "repository": "https://github.com/novon-labs/Open-tokenlist.git",
  "license": "ISC",
  "keywords": [],
  "scripts": {
    "prepublish": "run-s build:*",
    "build": "run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "test": "run-s build test:*",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test:spelling": "cspell \"{README.md,.github/*.md,src/**/*.ts}\"",
    "test:unit": "nyc --silent ava --verbose",
    "watch:build": "tsc -p tsconfig.json -w",
    "watch:test": "nyc --silent ava --watch"
  },
  "engines": {
    "node": ">=10"
  },
  "devDependencies": {
    "@ava/typescript": "^2.0.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/node": "^16.11.1",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "ava": "^3.15.0",
    "cspell": "^5.12.3",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^4.0.0",
    "eslint-plugin-import": "^2.25.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "2.4.1",
    "ts-node": "^10.3.0",
    "typescript": "^4.4.4"
  },
  "files": [
    "dist/main",
    "dist/module",
    "!**/*.spec.*",
    "LICENSE",
    "README.md"
  ],
  "ava": {
    "failFast": true,
    "timeout": "60s",
    "typescript": {
      "compile": "tsc",
      "rewritePaths": {
        "src/": "dist/main/"
      }
    },
    "files": [
      "!dist/module/**"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "exclude": [
      "**/*.spec.js"
    ]
  }
}
